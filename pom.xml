		<repository>
			<id>jboss-repo</id>
			<name>jboss-repo</name>
			<url>https://repository.jboss.org/nexus</url>
		</repository>
		<repository>
			<id>indenica-tuv-snapshots</id>
			<url>https://raw.github.com/indenicatuv/snapshots/mvn/</url>
